{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "description": "Update renovate docker image references",
      "fileMatch": ["values.yaml"],
      "matchStrings": [
        "tag: (?<currentValue>.*?)\\s+"
      ],
      "depNameTemplate": "ghcr.io/renovatebot/renovate",
      "datasourceTemplate": "docker"
    }
  ]
}
