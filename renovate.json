{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "github>larisafaingold/.github"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "description": "Update renovate docker image references",
      "fileMatch": ["values.yaml"],
      "matchStrings": [
        "tag: (?<currentValue>.*?)\\s+"
      ],
      "depNameTemplate": "ghcr.io/renovatebot/renovate",
      "datasourceTemplate": "docker"
    },
    {
      "customType": "regex",
      "description": "Update kindest kubernetes references",
      "fileMatch": ["^\\.github\\/workflows\\/[^/]+\\.ya?ml$"],
      "matchStrings": [
        "kindest/node:(?<currentValue>v\\d+\\.\\d+\\.\\d+) # renovate: packageName=kindest/node\\n"
      ],
      "depNameTemplate": "kindest/node",
      "datasourceTemplate": "docker"
    },
    {
      "customType": "regex",
      "description": "Update kind references",
      "fileMatch": ["^\\.github\\/workflows\\/[^/]+\\.ya?ml$"],
      "matchStrings": [
        "version: (?<currentValue>v\\d+\\.\\d+\\.\\d+) # renovate: packageName=kubernetes-sigs/kind\\n"
      ],
      "depNameTemplate": "kubernetes-sigs/kind",
      "datasourceTemplate": "github-releases"
    }
  ]
}
